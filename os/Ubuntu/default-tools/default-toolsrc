source "$(dirname $(readlink -f $0))/lazy_loader.sh"

# Loads NVM. Doesn't lazy load because it's needed for coc.nvim
[[ -s $HOME/.nvm/nvm.sh  ]] && . $HOME/.nvm/nvm.sh

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/shirom/anaconda3/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/shirom/anaconda3/etc/profile.d/conda.sh" ]; then
        . "/home/shirom/anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/shirom/anaconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<

# Lazy load rbenv
export PATH="$HOME/.rbenv/bin:$PATH"
rbenv_init() {
    eval "$(rbenv init -)"
}

lazy_load rbenv_init rbenv bundle bundler gem irb rake ruby
